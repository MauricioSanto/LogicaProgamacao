algoritmo "Condicional SE"
var entrega: inteiro
inicio
  escreval("deseja que o seu pedido seja entregue? digite 0 para não e 1 para sim.")
  leia(entrega)
    escreval(entrega)

    se entrega = 0 faca
      escreva ("o usuario optou pela não entrega")
    fimse
  se entrega = 1 faca
    escreva ("o usuario optou pela entrega")
    fimse
fimalgoritmo